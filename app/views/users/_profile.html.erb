<table class="table">
		<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
		<tr>
			<th>follows</th>
			<th><%= link_to user.following.count, following_user_path(user) %></th>
		</tr>
		<tr>
			<th>followers</th>
			<th><%= link_to user.followers.count, followers_user_path(user)%></th>
		</tr>
</table>
<div class="follow">
    <% if current_user.following?(user) %>
		<%= form_for(current_user.active_relationships.build) do |f| %>
			<%= f.submit "フォローする", class: "btn btn-sucess" %>
		<% end %>
    <% else %>
		<%= form_for(current_user.active_relationships.find_by(followed_id: user.id)), method: :delete, do |f|%>
			<%= f.submit "フォローを外す", class: "btn btn-primary"%>
		<% end %>
    <% end %>
</div>

<div class="row">
	<%= link_to '',edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>