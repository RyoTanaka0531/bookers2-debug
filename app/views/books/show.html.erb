<div class="container">
<div class="error">
	<% if @book_comment.errors.any? %>
		<div id="error_explanation">
			<h3><%= pluralize(@book_comment.errors.count, "error") %> prohibited this obj being saved:</h3>
			<ul>
				<%= @book_comment.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
</div>
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'newform', book: @newbook %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>
					<td>
					  <% if @book.user.id == current_user.id %>
					    <%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %>
					  <% end %>
					</td>

					<td>
					  <% if @book.user.id == current_user.id %>
					    <%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
					  <% end %>
					</td>
					<td><%= render 'favorite', book: @book %></td>
					<td><%= render 'comment', book: @book  %> </td>
				</tr>
		</table>
		<div class="comment">
		  <% @book.book_comments.each do |book_comment| %>
		  <p>
			<%= link_to (book_comment.user) do %>
				<%= attachment_image_tag(book_comment.user, :profile_image, :fill,100,100, fallback: "no-image-mini.jpg")%><br>
				<%= book_comment.user.name%>
			<% end %>
			<%= book_comment.body %>
			<% if book_comment.user.id == current_user.id %>
				<%= link_to "delete", book_book_comment_path(@book, book_comment), method: :delete, class: "btn btn-danger" %>
			<% end %>
		  </p>
		  <% end %>
		</div>
		<div class="comment-form">
		  <%= form_for([@book, @book_comment]) do |f| %>
		    <%= f.text_area :body %>
			<%= f.submit "送信" %>
		  <% end %>
		</div>
	</div>
</div>
</div>