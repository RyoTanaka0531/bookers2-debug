
    <% if user_signed_in? %>
        <% if book.favorited_by?(current_user) %>
            <p><span class="glyphicon glyphicon-heart"></span><%= link_to book.favorites.count, book_favorites_path(book.id), method: :delete, remote: true %></p>
        <% else %>
            <p><span class="glyphicon glyphicon-heart-empty"></span><%= link_to book.favorites.count, book_favorites_path(book.id), method: :post, remote: true %></p>
        <% end %>
    <% end %>
